{
  "version": 2,
  "scope": "telemark",
  "name": "ms-shared-api-faktura",
  "alias": [
    "faktura.api.service.t-fk.no"
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_CONNECTION": "@db-tfkcosmos-connection",
    "MONGODB_COLLECTION": "fakturagrunnlag",
    "MONGODB_NAME": "felles",
    "MOA_TENANT_ID": "@moa_tenant_id",
    "JWT_SECRET": "@tfk-jwt-secret",
    "PAPERTRAIL_HOST": "@tfk-papertrail-host",
    "PAPERTRAIL_PORT": "@tfk-papertrail-port",
    "PAPERTRAIL_HOSTNAME": "elevpc"
  },
  "builds": [
    { 
      "src": "/index.js",
      "use": "@now/node" 
    },
    { 
      "src": "/api/*js",
      "use": "@now/node" 
    },
    {
      "src": "*.md",
      "use": "@now/md"
    }
  ],
  "routes": [
    { "src": "/docs",
      "dest": "/README.html"
    },
    { "src": "/favicon.ico",
      "dest": "/static/favicon.ico"
    },
    { "src": "/new",
      "dest": "/api/get-new-faktura.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "3600"
      }
    },
    { "src": "/batches",
      "dest": "/api/get-batches.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "3600"
      }
    },
    { "src": "/(.*)",
      "dest": "/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "3600",
        "Content-Type": "text/csv; charset=latin1"
      }
    }
  ]
}
